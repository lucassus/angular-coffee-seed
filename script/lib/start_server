function startServer() {
    SERVER_PORT=5000

    # start the backend server and wait till it's fully operational
    PORT="$SERVER_PORT" nodemon server/index.coffee --watch server ./server/index.coffee &
    while ! nc -vz localhost "$SERVER_PORT" &> /dev/null; do
      echo "Waiting for the backend server..."
      sleep 0.250
    done

    echo "Backend server is fully operational!"

    # grab the PID
    SERVER_PID=$!
}

function stopServer() {
    echo "Killing server with PID=$SERVER_PID"
    kill -9 "$SERVER_PID"
}
